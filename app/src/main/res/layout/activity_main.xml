<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.beee1004.calculator.MainActivity"
    android:id="@+id/edit">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_num1"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_num2"
        android:inputType="number"
        android:layout_below="@+id/edit_num1"
        android:layout_alignLeft="@+id/edit_num1"
        android:layout_alignStart="@+id/edit_num1" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_plus"
        android:textSize="20dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/button_min"
        android:layout_centerHorizontal="true"
        android:text="@string/str_plus"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_min"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/str_min"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_mul"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/str_mul"
        android:layout_below="@+id/button_min"
        android:layout_alignLeft="@+id/button_min"
        android:layout_alignStart="@+id/button_min" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_div"
        android:textSize="20dp"
        android:layout_marginTop="33dp"
        android:text="@string/str_div"
        android:layout_below="@+id/button_mul"
        android:layout_alignLeft="@+id/button_mul"
        android:layout_alignStart="@+id/button_mul" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="red"
        android:text="*계산 결과:"
        android:layout_below="@+id/button_div"
        android:layout_toLeftOf="@+id/edit_num2"
        android:layout_toStartOf="@+id/edit_num2" />

</RelativeLayout>
